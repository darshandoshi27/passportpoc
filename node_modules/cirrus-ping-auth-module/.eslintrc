{
  "extends": "airbnb-base",
  "rules": {
    "no-console": 0,
    "new-cap": ["error", { "properties": false }],
    "no-param-reassign": ["error", { "props": false }],
    "no-underscore-dangle": ["error", { "allow": ["_raw", "_raw.user_id"] }],
    "no-plusplus": 0,
    "arrow-body-style": ["error", "as-needed"]
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
   "browser": true,
   "node": true,
   "mocha": true
  }
}
