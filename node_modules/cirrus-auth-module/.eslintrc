{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "rules": {
    "no-console": "warn",
    "new-cap": 0,
    "no-underscore-dangle": ["error", { "allow": ["_raw", "_raw.user_id"] }],
    "no-plusplus": 0,
    "arrow-body-style": ["error", "as-needed"],
    "camelcase": 0,
    "no-param-reassign": 0,
    "import/no-dynamic-require": 0,
    "global-require": 0
  },
  "env": {
   "node": true,
   "es6": true,
   "mocha": true,
   "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  }
}
